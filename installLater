#!/bin/bash

InstallList=~/toInstall.txt

if [ "$1" == "Download" ]
then
	sudo apt -d install `cat $InstallList`
elif [ "$1" == "Install" ]
then
	sudo apt install `cat $InstallList`
elif [ "$1" == "Clean" ]
then
        > $InstallList
elif [ "$1" == "List" ]
then
	cat $InstallList
else
	for pkg in "$@"
	do
		echo $pkg
		echo $pkg >> $InstallList
	done
fi
