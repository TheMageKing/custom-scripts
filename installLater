#!/bin/bash

InstallList=~/toInstall.txt
if [ -e $InstallList ]
then
	RunStuff=true
else
	RunStuff=false
fi
$RunStuff && cat $InstallList

if [ "$1" == "Download" ]
then
	$RunStuff && sudo apt -dy install `cat $InstallList`
elif [ "$1" == "Install" ]
then
	$RunStuff && nice -n 20 sudo apt install `cat $InstallList`
elif [ "$1" == "Clean" ]
then
        $RunStuff && rm $InstallList
elif [ "$1" == "Edit" ]
then
	nano $InstallList
else
        $RunStuff && echo "================"
	for pkg in "$@"
	do
		echo $pkg
		echo $pkg >> $InstallList
	done
fi

