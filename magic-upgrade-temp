set -e
cd ~

# Use all internet-dependent things first
nice -n 10 mr online &
sudo nice -n 20 apt update
sudo nice -n 20 debdelta-upgrade -v
# Debdelta won't download new packages needed for update
sudo nice -n 20 apt dist-upgrade -dy
sudo -E nice -n 20 installLater Download
nice -n 10 mr fetch &

# Install downloaded updates
sudo nice -n 20 apt upgrade
sudo -E nice -n 20 installLater Install

#Cleanup
sudo apt autoclean
installLater Clean
